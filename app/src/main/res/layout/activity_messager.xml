<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <TextView android:id="@+id/content" android:layout_width="match_parent"
              android:layout_height="match_parent"/>
    <EditText android:id="@+id/edit_input" android:layout_width="match_parent"
              android:layout_height="60dp"
              android:layout_alignParentBottom="true"
              android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" android:layout_alignTop="@+id/edit_input"
        android:onClick="onClick"
        android:text="Send"/>
</RelativeLayout>